{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "strict": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__tests__/**"
  ],
  "compileOnSave": true
}
